@model List<Project>
@{
    ViewData["Title"] = "Home Page";
    ViewData["Page"] = "home page";
}

@if (Model == null) return;

<div class="projects">

@foreach (var project in Model)
{
    <div class="project"> 
        <p><b>@project.name</b></p>
        <p>Popis: @project.projectDescription</p>
        <p>technologie:
        @foreach (var item in project?.projectTechnology)
            {   
                <span style="color:@item.GetHtmlColor()">@item.name</span>
            }
        </p>

        @{
            List<Achievement> achievements = project.projectAchievements?.ToList();
        }
        <p>Stav:  <span style="color: @project.projectState.GetHtmlColor()">@project?.projectState?.name</span></p>
        <p>Typ:  <span style="color: @project.projectType.GetHtmlColor()">@project?.projectType?.name</span></p>
            @if (achievements.Count > 0)
            {
                <p>Úspěchy: @UniversalHelper.GetAchievements(achievements)</p>
            }
        @if (!project.github.IsNull()){ <p>Github: @project?.github</p>}
        @if (!project.slack.IsNull()){<p>Slack: @project?.slack</p>}
        <a href="/project/@project.id">Detail</a>
    </div>
}

</div>