@model List<EvidenceProject.Data.DataModels.DialInfo>

<div class="projectCreateItem">
<h2>Přidání kategorie</h2>
  <form method="POST" action="/dialinfo/add">
      <label for="name">Název kategorie:</label>
      <input name="name" type="text" placeholder="..." id="name" />
      <label for="description">Popis:</label>
      <input name="description" type="text" placeholder="..." id="description" />
      <input  type="submit" value="Přidat"/>
  </form>
    <div class="polozky">
        @{
            if (Model == null) return;
            foreach (var dialInfo in Model)
            {
                <p>@dialInfo.name</p>
            }
        }
    </div>
</div>
